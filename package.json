{
  "name": "gws",
  "private": true,
  "type": "module",
  "description": "Message filtering discord bot",
  "main": "index.ts",
  "bugs": {
    "url": "https://github.com/GrygrFlzr/gws/issues"
  },
  "repository": "github:GrygrFlzr/gws",
  "author": "GrygrFlzr",
  "license": "0BSD",
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10.26.0"
  },
  "scripts": {
    "dev": "dotenvx run -- turbo run dev --parallel",
    "build": "turbo run build",
    "test": "dotenvx run -- turbo run test",
    "test:watch": "dotenvx run -- pnpm --filter @gws/core test:watch",
    "bench": "dotenvx run -- pnpm --filter @gws/core test:bench",
    "db:start": "docker compose -f infra/docker-compose.dev.yml up -d",
    "db:stop": "docker compose -f infra/docker-compose.dev.yml down",
    "db:logs": "docker compose -f infra/docker-compose.dev.yml logs -f",
    "db:generate": "dotenvx run -- pnpm --filter @gws/core db:generate",
    "db:migrate": "dotenvx run -- pnpm --filter @gws/core db:migrate",
    "db:studio": "dotenvx run -- pnpm --filter @gws/core db:studio",
    "bot": "dotenvx run -- pnpm --filter @gws/bot dev",
    "dashboard": "dotenvx run -- pnpm --filter @gws/dashboard dev",
    "check": "dotenvx run -- turbo run check",
    "lint": "turbo run lint",
    "lint:root": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "install:all": "pnpm install --frozen-lockfile"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "catalog:",
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "globals": "catalog:",
    "prettier": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "packageManager": "pnpm@10.26.0"
}
