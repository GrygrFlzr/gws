{
  "name": "gws",
  "private": true,
  "type": "module",
  "description": "Message filtering discord bot",
  "main": "index.ts",
  "bugs": {
    "url": "https://github.com/GrygrFlzr/gws/issues"
  },
  "repository": "github:GrygrFlzr/gws",
  "author": "GrygrFlzr",
  "license": "0BSD",
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10.26.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "pnpm --filter @gws/core test:watch",
    "bench": "pnpm --filter @gws/core test:bench",
    "db:generate": "pnpm --filter @gws/core db:generate",
    "db:migrate": "pnpm --filter @gws/core db:migrate",
    "db:studio": "pnpm --filter @gws/core db:studio",
    "bot": "pnpm --filter @gws/bot dev",
    "dashboard": "pnpm --filter @gws/dashboard dev",
    "check": "turbo run check type-check",
    "lint": "turbo run lint",
    "lint:root": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "install:all": "pnpm install --frozen-lockfile"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "turbo": "^2.7.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.26.0"
}
