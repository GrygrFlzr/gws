{
  "name": "@gws/dashboard",
  "version": "0.0.1",
  "type": "module",
  "description": "Web dashboard for GWS management",
  "scripts": {
    "dev": "dotenv -e ../../.env vite dev",
    "build": "dotenv -e ../../.env vite build",
    "preview": "dotenv -e ../../.env vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "type-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest",
    "//test": "npm run test:unit -- --run",
    "test": "echo \"No tests yet\" && exit 0",
    "db:start": "docker compose up",
    "db:push": "dotenv -e ../../.env drizzle-kit push",
    "db:generate": "dotenv -e ../../.env drizzle-kit generate",
    "db:migrate": "dotenv -e ../../.env drizzle-kit migrate",
    "db:studio": "dotenv -e ../../.env drizzle-kit studio"
  },
  "dependencies": {
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@gws/core": "workspace:*",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.4",
    "@vitest/browser-playwright": "^4.0.16",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^16.5.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.46.0",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^4.0.16",
    "vitest-browser-svelte": "^2.0.1"
  }
}
